<?xml version="1.0" encoding="utf-8"?>
    <resources>
        <!-- the theme applied to the application or activity -->
        <style name="CustomActionBarTheme"
            parent="@style/Theme.AppCompat.Light.DarkActionBar">
            <item name="android:actionBarStyle">@style/MyActionBar</item>

            <!-- Support library compatibility -->
            <item name="actionBarStyle">@style/MyActionBar</item>
        </style>

        <!-- ActionBar styles -->
        <style name="MyActionBar"
            parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
            <item name="android:background">#FF082D6D</item>

            <!-- Support library compatibility -->
            <item name="background">@drawable/actionbar_background</item>
        </style>



        <!-- Widget styling -->

        <style name="Widget.DescriptionBar">
            <item name="android:background">#fb3</item>

            <item name="android:paddingLeft">@dimen/page_margin</item>
            <item name="android:paddingRight">@dimen/page_margin</item>
            <item name="android:textAppearance">?android:textAppearanceSmall</item>
            <item name="android:lineSpacingMultiplier">1.1</item>
            <item name="android:gravity">center</item>


        </style>

    <!-- Services styling -->

    <style name="ServiceText">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#FF000000</item>
        <item name="fontPath">fonts/cronos_bold.otf</item>
    </style>

    <style name="CategoryText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FF000000</item>
        <item name="fontPath">fonts/cronos_light.TTF</item>
    </style>

    <style name="InfoText">
            <item name="android:textSize">12sp</item>
            <item name="android:textColor">#FF000000</item>
            <item name="fontPath">fonts/cronos_light.TTF</item>
    </style>

    <style name="CheckText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#FFD3D3D3</item>
        <item name="fontPath">fonts/cronos_italic.ttf</item>
    </style>

    <!-- Custom Dialog styling -->
    <style name="Smartapps.Theme.Dialog"
        parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:textColor">#FF000000</item>
    </style>

    <style name="PriceText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="fontPath">fonts/cronos_bold.otf</item>
    </style>
    <style name="HeaderText">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#FF000000</item>
        <item name="fontPath">fonts/cronos_bold.otf</item>
    </style>
    <style name="ButtonTextGreen">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FF8bc33e</item>
        <item name="fontPath">fonts/cronos_bold.otf</item>
    </style>
    <style name="ButtonTextWhite">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="fontPath">fonts/cronos_bold.otf</item>
    </style>
    <style name="ButtonTextGray">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FF808080</item>
        <item name="fontPath">fonts/cronos_bold.otf</item>

    </style>

    <!-- COLORS -->
    <color name="black">#FF000000</color>
    <color name="whitegrey">#FFF2F2F2</color>
    <color name="white">#FFFFFFFF</color>


</resources>

